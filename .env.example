# ============================
# Secure Remote Storage (.env)
# ============================

# Flask
FLASK_ENV=production
# If you use a secret key anywhere (sessions/jwt), set it here
FLASK_SECRET_KEY=change_me_super_secret

# Storage location inside container
# docker-compose sets this already, but keep for local runs
SRS_STORAGE=secure_storage

# Mongo (docker-compose)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=securepassword123

# If you later make Mongo host configurable in code:
# MONGO_HOST=mongo
# MONGO_PORT=27017
# MONGO_DB=srs_db

# Optional: enable verbose logs
LOG_LEVEL=INFO
